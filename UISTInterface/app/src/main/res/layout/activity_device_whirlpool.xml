<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uulm.uist.uistinterface.DeviceACActivity">

    <TextView
        android:id="@+id/whirlpool_water_label"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wassermenge:"
        android:textSize="30dp"
        />

    <SeekBar
        android:id="@+id/whirlpool_water_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/whirlpool_water_label"
        android:layout_below="@id/hairdryer_tmp_label"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        android:max="100"
        android:scaleX="2"
        android:scaleY="2"/>

    <TextView
        android:id="@+id/whirlpool_tmp_label"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whirlpool_water_label"
        android:text="Temperatur:"
        android:textSize="30dp"
        />

    <SeekBar
        android:id="@+id/whirlpool_tmp_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/whirlpool_water_label"
        android:layout_below="@id/whirlpool_water_seekbar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        android:max="100"
        android:scaleX="2"
        android:scaleY="2"/>

    <TextView
        android:id="@+id/whirlpool_bubbles_label"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whirlpool_tmp_label"
        android:text="Bubble bath:"
        android:textSize="30dp"
        />

    <Switch
        android:id="@+id/switchBubblebath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whirlpool_tmp_label"
        android:layout_toRightOf="@id/whirlpool_water_label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:scaleX="2"
        android:scaleY="2"
        />

</RelativeLayout>
