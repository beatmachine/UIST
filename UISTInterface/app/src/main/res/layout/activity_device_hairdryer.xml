<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uulm.uist.uistinterface.DeviceACActivity">

    <Switch
        android:id="@+id/switchHairdryer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:scaleX="2"
        android:scaleY="2"
        />

    <TextView
        android:id="@+id/hairdryer_tmp_label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchHairdryer"
        android:text="Temperatur:"
        android:textSize="30dp"
        />

    <SeekBar
        android:id="@+id/hairdryer_tmp_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hairdryer_tmp_label"
        android:layout_below="@id/switchHairdryer"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        android:max="100"
        android:scaleX="2"
        android:scaleY="2"/>

    <TextView
        android:id="@+id/hairdryer_speed_label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hairdryer_tmp_label"
        android:text="GeblÃ¤se:"
        android:textSize="30dp"
        />

    <SeekBar
        android:id="@+id/hairdryer_speed_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hairdryer_tmp_label"
        android:layout_below="@id/hairdryer_tmp_label"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        android:max="100"
        android:scaleX="2"
        android:scaleY="2"/>


</RelativeLayout>
