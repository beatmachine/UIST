<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uulm.uist.uistinterface.DeviceBlurayPlayerActivity">

    <Switch
        android:id="@+id/bluray_player_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bluray_player_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintLeft_toRightOf="@+id/bluray_player_switch"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/bluray_player_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/bluray_player_play"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/bluray_player_textView_DVDNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluray_dvdname"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bluray_player_play" />

    <TextView
        android:id="@+id/bluray_player_textView_KRABAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/dvd_example"
        app:layout_constraintBaseline_toBaselineOf="@+id/bluray_player_textView_DVDNAME"
        app:layout_constraintLeft_toRightOf="@+id/bluray_player_textView_DVDNAME"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
