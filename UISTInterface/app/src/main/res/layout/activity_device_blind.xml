<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uulm.uist.uistinterface.DeviceBlindActivity">

    <Button
        android:id="@+id/blinds_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öffnen"/>

    <Button
        android:id="@+id/blinds_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blinds_open"
        android:text="Schließen"/>

    <Button
        android:id="@+id/blinds_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blinds_close"
        android:text="Anhalten"/>



</RelativeLayout>
